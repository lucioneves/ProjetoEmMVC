@model EmprestimosModel
@{
    ViewData["title"] = "Excluir Emprestimo";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-bg-info" role="alert">
        @TempData["MensagemSucesso"]

    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-bg-info" role="alert">
        @TempData["MensagemErro"]

    </div>
}

<div class="container bg-dark p-3 rounded-5">

    <div class="mb-3 text-center">
        <h1 class="text-light">Exclusão de Emprestimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for=Id />

        <h2 class="text-light text-center">tem certeza que deseja excluir o registro abaixo?</h2>

        <div class="mb-2">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control text-dark" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>

        </div>

        <div class="mb-2">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control text-dark" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-2">
            <label for="Livro" class="form-label text-light">Livro:</label>
            <input type="text" class="form-control text-dark" id="Livro" asp-for="LivrosEmprestado" placeholder="Qual livro está sendo emprestado?" disabled>
            <span class="text-danger" asp-validation-for="LivrosEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>
